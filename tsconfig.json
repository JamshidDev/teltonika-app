{
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/shared/config/*"],
      "@database/*": ["src/shared/database"]
    },

    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",

    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",

    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
